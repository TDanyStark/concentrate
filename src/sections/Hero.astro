---
import { URL_BASE } from "@/config";
import Title from "@/components/Title.astro";
---

<section>
  <div class="max-w-7xl mx-auto font-brandon">
    <div class="relative overflow-clip">
      <img src={`${URL_BASE}/img/hero.webp`} class="h-180 object-[80%] object-cover md:object-center lg:h-auto" alt="Mujer con guantes de boxeo" />
      <div class="absolute inset-0 w-full h-full flex flex-col justify-end lg:justify-between items-start p-4 md:p-10 gap-10">
        <Title size={1} color="text-morado-oscuro-abbott" />
        <a
          href=`${URL_BASE}/game/`
          class="text-white text-2xl md:text-4xl inline-block px-6 py-3 bg-morado-oscuro-abbott rounded-full text-center font-light"
        >
          <span class="font-bold">HAZ CLIC AQU√ç</span> PARA EMPEZAR
        </a>
      </div>
    </div>
  </div>
</section>
